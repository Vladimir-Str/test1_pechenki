@page
@model test1_pechenki.Pages.Payments.IndexModel

@{
    ViewData["Title"] = "Платежи и выплаты";
}

<h1>Платежи</h1>

<p>
    <a asp-page="Create">Добавить платеж(+) /выплату (-)</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].PaymentSum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].PaymentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Payment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentSum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstMidName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PaymentID">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.PaymentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
