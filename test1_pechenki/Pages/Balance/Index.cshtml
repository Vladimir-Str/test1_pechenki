@page
@model test1_pechenki.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Баланс сотрудников";
}

<h1>Баланс</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Balance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
        </tr>
        }
    </tbody>
</table>
